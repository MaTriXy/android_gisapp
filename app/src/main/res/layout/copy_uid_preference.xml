<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/preference_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_uid"
        android:textSize="16sp"
        android:textColor="@color/color_black"

        />

    <TextView
        android:id="@+id/preference_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/textColorSecondary.Light"
        />
    </LinearLayout>


    <ImageView
        android:id="@+id/preference_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_action_content_copy"
        android:contentDescription="@string/yes" />
</RelativeLayout>
